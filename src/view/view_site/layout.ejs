<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Quebra Galho | <%= dados.titulo; %></title>

    <link rel="shortcut icon" href="./src_site/img/favicon_vicunha_icon.ico" type="image/x-icon" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="./src_site/css/style.css">

    <!-- Incluir Folhas de Estilo Css -->
    <% if(dados.css) {
        dados.css.forEach(element => { %>
            <link rel="stylesheet" href="<%= element; %>">
    <% });
    } %>
</head>
<body>
    <header>
        <div class="navbar">
            <div class="logo">
                <a href="/">Quebra Galho Filial</a>
            </div>

            <ul class="links">
                <li class="links-icons">
                    <a href="/home"><i class="fa-solid fa-house"></i> Home</a>
                </li>

                <li class="links-icons">
                    <a href="/contatos"><i class="fa-solid fa-phone"></i> Contatos</a>
                </li>

                <li class="links-icons">
                    <a href="/documentacao"><i class="fa-solid fa-book"></i> Documentação</a>
                </li>
            </ul>

            <a href="/login" class="action-btn">Iniciar Sessão <!-- <i class="fa-solid fa-right-to-bracket"></i> --></a>

            <div class="toggle-btn">
                <i class="fa-solid fa-bars"></i>
            </div>
        </div>

        <div class="dropdown_menu">
            <li class="links-icons">
                <a href="/home"><i class="fa-solid fa-house"></i> Home</a>
            </li>

            <li class="links-icons">
                <a href="/contatos"><i class="fa-solid fa-phone"></i> Contatos</a>
            </li>

            <li class="links-icons">
                <a href="/documentacao"><i class="fa-solid fa-book"></i> Documentação</a>
            </li>

            <li>
                <a href="/login" class="action-btn">Iniciar Sessão <!-- <i class="fa-solid fa-right-to-bracket"></i> --></a>
            </li>
        </div>
    </header>

    <!-- Incluir Meus Componentes Tela -->
    <main>
        <%- include(dados.tela); %>
    </main>
    
    <script src="./src_site/js/script.js"></script>
    <!-- Incluir Componentes de JS para manipular o DOOM -->
    <% if(dados.js) {
        dados.js.forEach(element => { %>
            <script src="<%= element; %>"></script>
    <% });
    } %>

</body>
</html>